<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1.0">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="8.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="8.0dip">

                <top.golvaje.me.view.OvalImageView
                    android:id="@+id/jokes_user_profile"
                    android:layout_width="45.0dip"
                    android:layout_height="45.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="#ffffffff"
                    fresco:placeholderImage="@drawable/male"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="true"
                    fresco:roundBottomLeft="false"
                    fresco:roundBottomRight="false"
                    fresco:roundedCornerRadius="5.0dip"
                    fresco:roundingBorderWidth="1.0dip" />

                <TextView
                    android:id="@+id/jokes_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lang"
                    android:layout_alignParentTop="true"
                    android:text=""
                    android:textColor="#ff656565"
                    android:textSize="15.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jokes_username"
                    android:layout_marginLeft="15.0dip"
                    android:layout_toRightOf="@+id/jokes_user_profile"
                    android:text=""
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jokes_username"
                    android:layout_toRightOf="@+id/lang"
                    android:text="12min ago"
                    android:textSize="13.0sp" />

                <RadioGroup
                    android:id="@+id/populargroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/time"
                    android:layout_below="@+id/text"
                    android:layout_marginLeft="90.0dip"
                    android:layout_marginTop="12.0dip"
                    android:layout_toRightOf="@+id/time"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P" />

                    <RadioButton
                        android:id="@+id/not_popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NP" />
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extend"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/enlarge" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_block"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="35.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:visibility="visible">

        <TextView
            android:id="@+id/jokes_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#333333"
            android:text=""
            android:paddingTop="10.0dip"
            android:textSize="16.0sp"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/image_ads_video_layout"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:background="#ffffffff">

        <top.golvaje.me.view.OvalImageView
            android:id="@+id/ad_list_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:visibility="gone" />

        <WebView
            android:id="@+id/youtubePlayerWebView"
            android:layout_width="fill_parent"
            android:layout_height="205.0dip"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:contentDescription="@null"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/jokes_list_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null" />

        <RelativeLayout
            android:id="@+id/joke_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/jokes_list_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:adjustViewBounds="true"
                android:background="#ffffffff"
                android:contentDescription="@null"
                android:padding="20.0dip"
                android:textColor="#ff333333"
                android:textSize="15.0sp"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="6.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/left_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:id="@+id/jokes_smiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2.0dip"
                        android:textColor="@color/black"
                        android:textSize="10.0sp" />

                    <ImageView
                        android:id="@+id/up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/upvotes_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:id="@+id/jokes_frowns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2.0dip"
                        android:textColor="@color/black"
                        android:textSize="10.0sp" />

                    <ImageView
                        android:id="@+id/down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/downvotes_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:id="@+id/jokes_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="10.0sp" />

                    <ImageView
                        android:id="@+id/comment_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/comment_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">

                        <TextView
                            android:id="@+id/jokes_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10.0dip"
                            android:textColor="@color/black"
                            android:textSize="10.0sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/jokes_view">

                            <ImageView
                                android:id="@+id/joke_view_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/view" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flag_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip"
                    android:paddingTop="20.0dip">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/jokesId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/left_icons"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingTop="10.0dip">

                <TextView
                    android:id="@+id/jokes_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/share_1" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>